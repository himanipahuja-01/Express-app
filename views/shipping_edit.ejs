<%-include('admin_dashboard_header.ejs')%>

<div
  class="content-wrapper iframe-mode"
  data-widget="iframe"
  data-loading-screen="750"
>
  <div class="container">
    <h1 align="center" class="mt-3">Shipping Edit</h1>

    <form action="/edited_shipping" method="post" class="p-3 mt-2 mx-5">
      <input
        type="text"
        class="form-control"
        required
        hidden
        name="id"
        value="<%=data[0].orderid%>"
      /><br />
      <!-- <label class="form-label"></label> -->
      <input
        type="text"
        class="form-control"
        required
        hidden
        name="pid"
        value="<%=data[0].pid%>"
      /><br />

      <label class="form-label">Product Name</label>
      <input
        type="text"
        class="form-control"
        required
        placeholder="Enter Product name"
        name="name"
        value="<%=data[0].pname%>"
      /><br />

      <label class="form-label">Packing Status</label>
      <select class="form-control" required name="packing_status">
        <%if(data[0].packing_status==="processing"){%>
        <option selected>processing</option>
        <option>packing start</option>
        <option>cancel please contact to customer care</option>
        <%}else if(data[0].packing_status==="packing start"){ %>
        <option>processing</option>
        <option selected>packing start</option>
        <option>cancel please contact to customer care</option>
        <%} else{%>
        <option>processing</option>
        <option>packing start</option>
        <option selected>cancel please contact to customer care</option>
        <%}%>
      </select>
      <br />

      <label class="form-label">Shipping Status</label>
      <select class="form-control" required name="shipping_status">
        <%if(data[0].shipping_status==="processing"){%>
        <option selected>processing</option>
        <option>on the way</option>
        <option>Arriving today</option>
        <%}else if(data[0].shipping_status==="on the way"){ %>
        <option>processing</option>
        <option selected>on the way</option>
        <option>Arriving today</option>
        <%} else{%>
        <option>processing</option>
        <option>on the way</option>
        <option selected>Arriving today</option>
        <%}%>
      </select>
      <br />

      <label class="form-label">Arriving status</label>
      <select class="form-control" required name="arrived_status">
        <%if(data[0].arrived_status==="processing"){%>
        <option selected>processing</option>
        <option>Reached to the Warehouse</option>
        <option>Arrived</option>
        <%}else if(data[0].arrived_status==="Reached to the Warehouse"){ %>
        <option>processing</option>
        <option selected>Reached to the Warehouse</option>
        <option>Arrived</option>
        <%} else{%>
        <option>processing</option>
        <option>Reached to the Warehouse</option>
        <option selected>Arrived</option>
        <%}%>
      </select>
      <br />


      <label class="form-label">Address</label>
      <input
        type="text"
        class="form-control"
        required
        name="address"
        value="<%=data[0].shipping_address%>"
      />
      <br />
      <button class="btn btn-success">save now</button>
    </form>
  </div>
</div>

<%-include('admin_dashboard_footer.ejs')%>
