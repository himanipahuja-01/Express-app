<%-include('admin_dashboard_header.ejs')%>

<div
  class="content-wrapper iframe-mode"
  data-widget="iframe"
  data-loading-screen="750"
>
  <div class="container">
    <h1 align="center" class="mt-3">Edit user</h1>

    <form action="/edited_user" method="post" class="p-3 m-5">
      <input
        type="text"
        class="form-control"
        required
        hidden
        name="id"
        value="<%=data[0].user_id%>"
      /><br />
      <label class="form-label">Name</label>
      <input
        type="text"
        class="form-control"
        required
        name="name"
        value="<%=data[0].name%>"
      /><br />

      <label class="form-label">Email_id</label>
      <input
        type="email"
        class="form-control"
        required
        placeholder="Enter Email_id"
        name="email"
        value="<%=data[0].email%>"
      /><br />

      <label class="form-label">Password</label>
      <input
        type="text"
        class="form-control"
        required
        placeholder="Enter Password"
        name="password"
        value="<%=data[0].password%>"
      /><br />

      <label class="form-label">Mobile number</label>
      <input
        type="text"
        class="form-control"
        required
        placeholder="Enter mobile number"
        name="mobile"
        value="<%=data[0].mobile%>"
      /><br />

      <label class="form-label">Gender</label>
      <input
        type="text"
        class="form-control"
        required
        name="gender"
        value="<%=data[0].gender%>"
      />
      <br />

      <label class="form-label">Address</label>
      <input
        type="text"
        class="form-control"
        required
        name="address"
        value="<%=data[0].address%>"
      />
      <br />
      <button class="btn btn-success">save now</button>
    </form>
  </div>
</div>

<%-include('admin_dashboard_footer.ejs')%>
